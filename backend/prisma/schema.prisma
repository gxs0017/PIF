datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  role           Role     @default(USER)
  teamSubRole    TeamSubRole? // Optional field for sub-roles within the team
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastUsedAt     DateTime?
}

enum Role {
  USER
  DEALER
  TEAM
  SADMIN
}

enum TeamSubRole {
  NON_DEV
  DEV
  ADMIN_TEAM
}
